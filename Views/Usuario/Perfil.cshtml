@model SilliconValley.Integration.dto.Usuario

@{
    ViewData["Title"] = "Perfil de Usuario";
}

<div class="container">
    <h1 class="mt-4 mb-3" style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">Perfil de @Model.Nombre @Model.Apellido</h1>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Avatar" alt="Avatar" class="img-fluid rounded-circle mb-3" style="max-width: 200px;" />
        </div>
        <div class="col-md-8">
            <h2 style=" text-align: center;">Informaci√≥n del Usuario</h2>
            <dl class="row" style="background-color: #aad5e9;">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9" style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">@Model.Id</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9" style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">@Model.Email</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9" style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">@Model.Nombre</dd>

                <dt class="col-sm-3">Apellido</dt>
                <dd class="col-sm-9" style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">@Model.Apellido</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index", "Usuario")" class="btn btn-secondary" style="background-color: #320fdd; color: white; border: none;">Volver a la lista de usuarios</a>
    </div>
</div>