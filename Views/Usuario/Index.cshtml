@model List<SilliconValley.Integration.dto.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h2 style=" text-align: center; font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">Lista de Usuarios</h2>

<div class="table-responsive" style="background-color: #aad5e9;">
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">Id</th>
                <th style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">Email</th>
                <th style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">First Name</th>
                <th style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">Last Name</th>
                <th style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">Avatar</th>
                <th style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">Perfil</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td style="font-weight: bold; font-family: Arial, sans-serif; color:#750D37;">@Html.DisplayFor(modelItem => user.Id)</td>
                        <td style="font-weight: bold; font-family: Arial, sans-serif; color:#750D37;">@Html.DisplayFor(modelItem => user.Email)</td>
                        <td style="font-weight: bold; font-family: Arial, sans-serif; color:#750D37;">@Html.DisplayFor(modelItem => user.Nombre)</td>
                        <td style="font-weight: bold; font-family: Arial, sans-serif; color:#750D37;">@Html.DisplayFor(modelItem => user.Apellido)</td>
                        <td style=" text-align: center;"><img src="@Html.Encode(user.Avatar)" alt="Avatar of @Html.Encode(user.Nombre) @Html.Encode(user.Apellido)" class="avatar-img" /></td>
                        <td style=" text-align: center;" ><a class="btn btn-primary" href="@Url.Action("Perfil", new { Id = user.Id })">Ir a Perfil</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center font-weight-bold">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .avatar-img {
        width: 65px;
        height: 65px;
        border-radius: 30%;
    }
</style>